        <castItem><role xml:id="MARTINE" civil="F" type="H" statut="bourgeois" age="A" stat_amour="néant">MARTINE</role>, femme de Sganarelle.</castItem>
        <castItem><role xml:id="MONSIEUR-ROBERT" civil="M" type="H" statut="bourgeois" age="A" stat_amour="néant">MONSIEUR ROBERT</role>, voisin de Sganarelle.</castItem>
        <castItem><role xml:id="VALÈRE" civil="M" type="H" statut="domestique" age="A" stat_amour="néant">VALÈRE</role>, domestique de Géronte.</castItem>
        <castItem><role xml:id="LUCAS" civil="M" type="H" statut="bourgeois" age="A" stat_amour="néant">LUCAS</role>, mari de Jacqueline.</castItem>
