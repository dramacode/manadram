        <castItem><role xml:id="madame-argante" civil="F" type="H" statut="bourgeois" age="A" stat_amour="néant">MADAME ARGANTE</role>, mère de Léonore.</castItem>
        <castItem><role xml:id="leonore" civil="F" type="H" statut="bourgeois" age="A" stat_amour="néant">LÉONORE</role>.</castItem>
        <castItem><role xml:id="monsieur-mathieu" civil="M" type="H" statut="bourgeois" age="A" stat_amour="néant">Monsieur MATHIEU</role>.</castItem>
