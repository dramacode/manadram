        <castItem><role xml:id="clarice" civil="F" type="H" statut="bourgeois" age="A" stat_amour="amoureux">CLARICE</role>, amante de Léandre.</castItem>
        <castItem><role xml:id="mme_grognac" civil="F" type="H" statut="bourgeois" age="A" stat_amour="néant">Mme GROGNAC</role>.</castItem>
        <castItem><role xml:id="isabelle" civil="F" type="H" statut="bourgeois" age="A" stat_amour="amoureux">ISABELLE</role>, fille de Mme Grognac.</castItem>
        <castItem><role xml:id="le_chevalier" civil="M" type="H" statut="chevalier" age="A" stat_amour="amoureux">LE CHEVALIER</role>, frère de Clarice et amant d’Isabelle.</castItem>
        <castItem><role xml:id="valere" civil="M" type="H" statut="aristocrate" age="A" stat_amour="néant">VALÈRE</role>, oncle de Clarice et du Chevalier.</castItem>
