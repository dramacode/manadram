        <castItem><role xml:id="zenobie" civil="F" type="H" statut="roi" age="A" stat_amour="néant">ZÉNOBIE</role>, reine d’Orient.</castItem>
        <castItem><role xml:id="ismene" civil="F" type="H" statut="prince" age="A" stat_amour="Sapor">ISMÈNE</role>, fille de Zénobie.</castItem>
        <castItem><role xml:id="sapor" civil="M" type="H" statut="prince" age="A" stat_amour="Ismène">SAPOR</role>, Fils du roi de Perse, promis à Ismène.</castItem>
        <castItem><role xml:id="sabinus" civil="M" type="H" statut="tribun" age="A" stat_amour="néant">SABINUS</role>, tribun de l’armée d’Aurélien.</castItem>
