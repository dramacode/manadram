        <castItem><role xml:id="geronte" civil="M">GÉRONTE</role>, oncle d’Éraste.</castItem>
        <castItem><role xml:id="eraste" civil="M">ÉRASTE</role>ÉRASTE, amant d’Isabelle.</castItem>
        <castItem><role xml:id="madame-argante" civil="F">MADAME ARGANTE</role>, mère d’Isabelle.</castItem>
        <castItem><role xml:id="isabelle" civil="F">ISABELLE</role>, fille de Mme Argante.</castItem>
        <castItem><role xml:id="lisette" civil="F">LISETTE</role>, servante de Géronte.</castItem>
        <castItem><role xml:id="crispin" civil="M">CRISPIN</role>, valet d’Éraste.</castItem>
