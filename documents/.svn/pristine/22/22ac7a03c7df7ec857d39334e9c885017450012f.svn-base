        <castItem><role xml:id="babet" civil="F" type="H" statut="bourgeois" age="E" stat_amour="néant">BABET</role>, fille de Monsieur Trigaudin.</castItem>
        <castItem><role xml:id="toinon" civil="F" type="H" statut="servante" age="A" stat_amour="néant">TOINON</role>, servante de Monsieur Trigaudin.</castItem>
        <castItem><role xml:id="leandre" civil="M" type="H" statut="aristocrate" age="A" stat_amour="amoureux">LÉANDRE</role>, amant de Babet.</castItem>
        <castItem><role xml:id="champagne" civil="M" type="H" statut="valet" age="A" stat_amour="néant">CHAMPAGNE</role>, valet de Léandre.</castItem>
        <castItem><role xml:id="griffonet" civil="M" type="H" statut="clerc" age="A" stat_amour="néant">GRIFFONET</role>, clerc de M. Trigaudin.</castItem>
        <castItem><role xml:id="guillot" civil="M" type="H" statut="paysan" age="A" stat_amour="néant">GUILLOT</role>, paysan.</castItem>
        <castItem><role xml:id="mathieu" civil="M" type="H" statut="paysan" age="A" stat_amour="néant">MATHIEU</role>, paysan.</castItem>
