    <front>
      <docTitle>
        <titlePart type="main">L’IMPROMPTU DE VERSAILLES</titlePart>
        <titlePart type="sub">COMÉDIE en un acte</titlePart>
      </docTitle>
      <docDate value="1663">1663</docDate>
      <docAuthor id="MOLIERE" bio="moliere">MOLIÈRE</docAuthor>
