        <castItem><role xml:id="brecourt" civil="M" type="H" statut="acteur" age="A" stat_amour="néant">BRÉCOURT</role>, homme de qualité.</castItem>
        <castItem><role xml:id="la-grange" civil="M" type="H" statut="acteur" age="A" stat_amour="néant">LA GRANGE</role>, marquis ridicule.</castItem>
        <castItem><role xml:id="du-croisy" civil="M" type="H" statut="acteur" age="A" stat_amour="néant">DU CROISY</role>, poète.</castItem>
        <castItem><role xml:id="la-thorilliere" civil="M" type="H" statut="acteur" age="A" stat_amour="néant">LA THORILLIÈRE</role>, marquis fâcheux.</castItem>
        <castItem><role xml:id="bejart" civil="M" type="H" statut="acteur" age="A" stat_amour="néant">BÉJART</role>, homme qui fait le nécessaire.</castItem>
