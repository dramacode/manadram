        <castItem><role xml:id="mademoiselle-du-croisy" civil="F" type="H" statut="acteur" age="A" stat_amour="néant">Mademoiselle DU CROISY</role>, peste doucereuse.</castItem>
        <castItem><role xml:id="mademoiselle-herve" civil="F" type="H" statut="acteur" age="A" stat_amour="néant">Mademoiselle HERVÉ</role>, servante précieuse.<role xml:id="un-necessaire"/><role xml:id="autre-necessaire"/></castItem>
