    <front>
      <docTitle>
        <titlePart type="main">MÉLICERTE</titlePart>
        <titlePart type="sub">COMÉDIE PASTORALE HÉROÏQUE</titlePart>
      </docTitle>
      <docDate value="1666">1666</docDate>
      <docAuthor id="MOLIERE" bio="moliere">Molière</docAuthor>
      <docImprint>
        <privilege id="166*-**-**"/>
