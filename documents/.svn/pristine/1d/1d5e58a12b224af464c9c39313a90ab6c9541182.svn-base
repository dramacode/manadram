        <castItem><role xml:id="dom-louis" civil="M" type="H" statut="aristocrate" age="A" stat_amour="néant">DOM LOUIS</role>, de Rochas.</castItem>
        <castItem><role xml:id="dom-fernand" civil="M" type="H" statut="aristocrate" age="A" stat_amour="néant">DOM FERNAND</role>, de Rochas.</castItem>
        <castItem><role xml:id="isabelle" civil="F" type="H" statut="aristocrate" age="A" stat_amour="amoureux">ISABELLE</role>, de Rochas.</castItem>
        <castItem><role xml:id="lucrece" civil="F" type="H" statut="aristocrate" age="A" stat_amour="néant">LUCRÈCE</role>, d’Alvarade.</castItem>
