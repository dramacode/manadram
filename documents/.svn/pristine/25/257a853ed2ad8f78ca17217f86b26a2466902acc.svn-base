        <titlePart type="sub">ou la CLÉMENCE D’AUGUSTE</titlePart>
        <titlePart type="sub">TRAGÉDIE</titlePart>
      </docTitle>
      <docDate value="1643">M. DC. XLIII  AVEC PRIVILÈGE DU ROI</docDate>
      <docAuthor id="CORNEILLE, Pierre" bio="corneillep">Pierre Corneille</docAuthor>
